@page
@model CompanyUserModel
@{
    ViewData["Title"] = "Register";
}
<div id="breadcrumb" class="clearfix">
    <div class="container">
        <div class="breadcrumb clearfix">
            <h2 class="bread-title">Registro</h2>
            <ul class="ul-breadcrumb">
                <li><a asp-action="Index" asp-controller="Home" title="Casa">Casa</a></li>
                <li><span>Registro</span></li>
            </ul>
        </div>
    </div>
</div><!-- end breadcrumb -->

<div id="columns" class="columns-container">
    <!-- container -->
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3" style="padding-top: 3%;">
                <form asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal box panel panel-default">
                  
                    <h3 class="panel-heading">Create an account</h3>
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form_content panel-body clearfix" style="padding: 25px">
                        <div class="form-group required">
                            <label asp-for="Input.FirstName"></label>
                            <input asp-for="Input.FirstName" class="form-control" />
                            <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                        </div>
                        <div class="form-group required">
                            <label asp-for="Input.LastName"></label>
                            <input asp-for="Input.LastName" class="form-control" />
                            <span asp-validation-for="Input.LastName" class="text-danger"></span>
                        </div>
                        <div class="form-group required">
                            <label asp-for="Input.UserName"></label>
                            <input asp-for="Input.UserName" class="form-control" />
                            <span asp-validation-for="Input.UserName" class="text-danger"></span>
                        </div>
                        <div class="form-group required">
                            <label asp-for="Input.Email"></label>
                            <input asp-for="Input.Email" class="form-control" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-group required">
                            <label asp-for="Input.Password"></label>
                            <input asp-for="Input.Password" class="form-control" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="form-group required">
                            <label asp-for="Input.ConfirmPassword"></label>
                            <input asp-for="Input.ConfirmPassword" class="form-control" />
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>
                        <div class="form-group required">
                            <label asp-for="Input.Phone"></label>
                            <input asp-for="Input.Phone" class="form-control" />
                            <span asp-validation-for="Input.Phone" class="text-danger"></span>
                        </div>
                        <div class="form-group required">
                            <label asp-for="Input.Address"></label>
                            <textarea asp-for="Input.Address" class="form-control"></textarea>
                            <span asp-validation-for="Input.Address" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <div class="col-lg-12">
                                <button type="submit" class="btn button btn-default">Register</button>
                                <p class="pull-right required"><span><sup>*</sup>Required field</span></p>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div> <!-- end container -->
</div><!--end columns -->

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
   
}
