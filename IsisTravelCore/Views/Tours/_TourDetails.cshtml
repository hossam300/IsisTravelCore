@model IsisTravelCore.Models.Domains.Tour
<div class="m-form m-form--fit m-form--label-align-right m-form--group-seperator-dashed">
    <div class="m-portlet__body">
        <input type="hidden" id="TourId" name="TourId" value="@Model.Id" />
        <div class="form-group m-form__group row">
            <label asp-for="TourName" class="col-form-label col-md-2"></label>
            <div class="col-md-3">
                <input asp-for="TourName" class="form-control m-input" disabled="disabled" />
            </div>
            <label asp-for="CountryId" class="col-form-label col-md-2"></label>
            <div class="col-md-3">
                <img id="image" width="200" />
                <select asp-for="CountryId" class="form-control  m-input select2" asp-items="ViewBag.CountryId" disabled="disabled"></select>
            </div>
        </div>
        <div class="form-group m-form__group row">
            <label asp-for="Intro" class="col-form-label col-md-2"></label>
            <div class="col-md-8">
                <textarea asp-for="Intro" class="form-control m-input summernote" disabled="disabled"></textarea>
            </div>

        </div>
        <div class="form-group m-form__group row">
            <label asp-for="Description" class="col-form-label col-md-2"></label>
            <div class="col-md-8">
                <textarea asp-for="Description" class="form-control m-input summernote" disabled="disabled"></textarea>
            </div>
        </div>
        <div class="form-group m-form__group row">
            <label asp-for="OldPrice" class="col-form-label col-md-2"></label>
            <div class="col-md-3">
                <input asp-for="OldPrice" class="form-control m-input" disabled="disabled" />
            </div>
            <label asp-for="Price" class="col-form-label col-md-2"></label>
            <div class="col-md-3">
                <input asp-for="Price" class="form-control m-input" disabled="disabled" />
            </div>
        </div>
        <div class="form-group m-form__group row">
            <label asp-for="StartDate" class="col-form-label col-md-2"></label>
            <div class="col-md-3">
                <input asp-for="StartDate" class="form-control m-input datepicker" disabled="disabled" />
            </div>
            <label asp-for="EndDate" class="col-form-label col-md-2"></label>
            <div class="col-md-3">
                <input asp-for="EndDate" class="form-control m-input datepicker" disabled="disabled" />
            </div>
        </div>
        <div class="form-group m-form__group row">
            <label asp-for="TourMainImage" class="col-form-label col-md-2"></label>
            <div class="col-md-3">
                <img id="image" width="200" src="@Url.Content("~/uploads/"+Model.Country.Name + "/Tours/" + Model.TourMainImage)" />
                <input type="hidden" asp-for="TourMainImage" />
            </div>
        </div>
    </div>
</div>