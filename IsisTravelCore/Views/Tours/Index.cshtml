@model IEnumerable<IsisTravelCore.Models.Domains.Tour>


@{
    ViewBag.Title = IsisTravelCore.Resources.Tour.TourList;
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var Activation = "";
    var HomePage = "";
}
<div class="m-portlet m-portlet--mobile">
    <div class="m-portlet__head">
        <div class="m-portlet__head-caption">
            <div class="m-portlet__head-title">
                <h3 class="m-portlet__head-text">
                    @ViewBag.Title
                </h3>
            </div>
        </div>
        <div class="m-portlet__head-tools">
            <ul class="m-portlet__nav">
                <li class="m-portlet__nav-item">
                    <a asp-action="Create" class="btn btn-danger m-btn m-btn--custom m-btn--icon m-btn--air">
                        <span>
                            <span>
                                @IsisTravelCore.Resources.Tour.CreateTour
                            </span>
                        </span>
                    </a>
                </li>
                <li class="m-portlet__nav-item"></li>
                <li class="m-portlet__nav-item m-dropdown m-dropdown--inline m-dropdown--arrow m-dropdown--align-right m-dropdown--align-push" m-dropdown-toggle="hover" aria-expanded="true">
                    <a href="#" class="m-portlet__nav-link m-dropdown__toggle dropdown-toggle btn btn--sm m-btn--pill btn-secondary m-btn m-btn--label-brand">
                        @IsisTravelCore.Resources.Genral.Export
                    </a>
                    <div class="m-dropdown__wrapper" style="z-index: 101;">
                        <span class="m-dropdown__arrow m-dropdown__arrow--right m-dropdown__arrow--adjust" style="left: auto; right: 36px;"></span>
                        <div class="m-dropdown__inner">
                            <div class="m-dropdown__body">
                                <div class="m-dropdown__content">
                                    <ul class="m-nav">
                                        <li class="m-nav__section m-nav__section--first">
                                            <span class="m-nav__section-text">
                                                @IsisTravelCore.Resources.Genral.ExportTools
                                            </span>
                                        </li>
                                        <li class="m-nav__item">
                                            <a href="#" class="m-nav__link" id="export_print">
                                                <i class="m-nav__link-icon la la-print"></i>
                                                <span class="m-nav__link-text">
                                                    @IsisTravelCore.Resources.Genral.Print
                                                </span>
                                            </a>
                                        </li>
                                        <li class="m-nav__item">
                                            <a href="#" class="m-nav__link" id="export_copy">
                                                <i class="m-nav__link-icon la la-copy"></i>
                                                <span class="m-nav__link-text">
                                                    @IsisTravelCore.Resources.Genral.Copy
                                                </span>
                                            </a>
                                        </li>
                                        <li class="m-nav__item">
                                            <a href="#" class="m-nav__link" id="export_excel">
                                                <i class="m-nav__link-icon la la-file-excel-o"></i>
                                                <span class="m-nav__link-text">
                                                    @IsisTravelCore.Resources.Genral.Excel
                                                </span>
                                            </a>
                                        </li>

                                        <li class="m-nav__item">
                                            <a href="#" class="m-nav__link" id="export_pdf">
                                                <i class="m-nav__link-icon la la-file-pdf-o"></i>
                                                <span class="m-nav__link-text">
                                                    @IsisTravelCore.Resources.Genral.PDF
                                                </span>
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </li>
            </ul>
        </div>
    </div>
    <div class="m-portlet__body">
        <!--begin: Datatable -->
        <table class="table table-striped- table-bordered table-hover table-checkable responsive" id="Tours">
            <thead>
                <tr>
                    <th style="text-align:center">
                        @Html.DisplayNameFor(model => model.TourMainImage)
                    </th>
                    <th style="text-align:center">
                        @Html.DisplayNameFor(model => model.TourName)
                    </th>
                    <th style="text-align:center">
                        @Html.DisplayNameFor(model => model.Country.Name)
                    </th>
                    <th style="text-align:center">
                        @Html.DisplayNameFor(model => model.OldPrice)
                    </th>
                    <th style="text-align:center">
                        @Html.DisplayNameFor(model => model.Price)
                    </th>
                    <th style="text-align:center">
                        @Html.DisplayNameFor(model => model.HomePage)
                    </th>
                    <th style="text-align:center">
                        @Html.DisplayNameFor(model => model.StartDate)
                    </th>
                    <th style="text-align:center">
                        @Html.DisplayNameFor(model => model.EndDate)
                    </th>

                    <th style="text-align:center">
                        @Html.DisplayNameFor(model => model.Active)
                    </th>
                    <th style="text-align:center"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td style="text-align:center">
                            <img src="@Url.Content("~/uploads/"+item.Country.Name+ "/Tours/"+item.TourMainImage)" width="80" class="img-circle" />
                        </td>
                        <td style="text-align:center">
                            @Html.DisplayFor(modelItem => item.TourName)
                        </td>
                        <td style="text-align:center">
                            @Html.DisplayFor(modelItem => item.Country.Name)
                        </td>
                        <td style="text-align:center">
                            @Html.DisplayFor(modelItem => item.OldPrice)
                        </td>
                        <td style="text-align:center">
                            @Html.DisplayFor(modelItem => item.Price)
                        </td>
                        <td style="text-align:center">
                            @Html.DisplayFor(modelItem => item.HomePage)
                        </td>
                        <td style="text-align:center">
                            @Html.DisplayFor(modelItem => item.StartDate)
                        </td>
                        <td style="text-align:center">
                            @Html.DisplayFor(modelItem => item.EndDate)
                        </td>

                        <td style="text-align:center">
                            @Html.DisplayFor(modelItem => item.Active)
                        </td>
                        <td style="text-align:center">
                            <a asp-action="Edit" asp-route-id="@item.Id">@IsisTravelCore.Resources.Genral.Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.Id">@IsisTravelCore.Resources.Genral.Details</a> |
                            @if (item.Active)
                            {
                                Activation = IsisTravelCore.Resources.Genral.InActive;
                            }
                            else
                            {
                                Activation = IsisTravelCore.Resources.Genral.Active;
                            }
                            <a asp-action="Activation" asp-route-id="@item.Id">@Activation</a>|
                            @if (item.HomePage)
                            {
                                HomePage = IsisTravelCore.Resources.Tour.HomePage;
                            }
                            else
                            {
                                HomePage = IsisTravelCore.Resources.Tour.NotHomePage;
                            }
                            <a asp-action="TourHomePage" asp-route-id="@item.Id">@HomePage</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
@section Scripts{
    <script>
        $(document).ready(function () {
            var t = $("#Tours").DataTable(
                {
                    "language": {
                        "url": "//cdn.datatables.net/plug-ins/1.10.19/i18n/Spanish.json"
                    },
                    scrollX: !0,
                    buttons: ["print", "copyHtml5", "excelHtml5", "pdfHtml5"],
                });
            $("#export_print").on("click", function (e) { e.preventDefault(), t.button(0).trigger() }),
                $("#export_copy").on("click", function (e) {
                    e.preventDefault(), t.button(1).trigger()
                }), $("#export_excel").on("click", function (e) { e.preventDefault(), t.button(2).trigger() }),
                $("#export_pdf").on("click", function (e) { e.preventDefault(), t.button(3).trigger() });

        });

    </script>
}
