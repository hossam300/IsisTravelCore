@model IsisTravelCore.Models.Domains.Country

@{
    ViewBag.Title = @IsisTravelCore.Resources.Country.CountryDetails;
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var Activation = "";
    var SlideShow = "";
}
<div class="row">
    <div class="col-lg-12">
        <!--begin::Portlet-->
        <div class="m-portlet">
            <div class="m-portlet__head">
                <div class="m-portlet__head-caption">
                    <div class="m-portlet__head-title">
                        <span class="m-portlet__head-icon m--hide">
                            <i class="la la-gear"></i>
                        </span>
                        <h3 class="m-portlet__head-text">
                            @ViewBag.Title @Model.Name
                        </h3>
                    </div>
                </div>
            </div>
            <div class="m-portlet__body">
                <div class="m-portlet__body">
                    <ul class="nav nav-tabs nav-fill" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" data-toggle="tab" href="#m_tabs_1_1">
                                <i class="la la-exclamation-triangle"></i>
                                @IsisTravelCore.Resources.Country.CountryDetails
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-toggle="tab" href="#m_tabs_1_2">
                                <i class="la la-exclamation-circle m--font-success"></i>
                                @IsisTravelCore.Resources.Country.Images
                            </a>

                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-toggle="tab" href="#m_tabs_1_3">
                                <i class="la la-cloud-download"></i>
                                @IsisTravelCore.Resources.Country.Tours
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-toggle="tab" href="#m_tabs_1_4">
                                <i class="la la-cloud-download"></i>
                                @IsisTravelCore.Resources.Country.Holels
                            </a>
                        </li>
                    </ul>
                    <div class="tab-content">
                        <div class="tab-pane active" id="m_tabs_1_1" role="tabpanel">
                            <div class="m-form m-form--fit m-form--label-align-right m-form--group-seperator-dashed">
                                <div class="form-group m-form__group row">

                                    <label asp-for="Name" class="col-form-label col-md-2"></label>
                                    <div class="col-md-3">
                                        <input asp-for="Name" class="form-control m-inputs" disabled="disabled" />
                                    </div>
                                    <label asp-for="CountryMainImage" class="col-form-label col-md-2"></label>
                                    <div class="col-md-3">
                                        <img id="image" src="@Url.Content("~/uploads/"+Model.Name+"/"+Model.CountryMainImage)" width="200" />
                                    </div>
                                </div>
                                <div class="form-group m-form__group row">
                                    <label asp-for="Description" class="col-form-label col-md-2"></label>
                                    <div class="col-md-8">
                                        <textarea asp-for="Description" class="form-control m-input summernote" disabled="disabled"></textarea>
                                    </div>
                                </div>
                                <div class="form-group m-form__group row">
                                    <label asp-for="CreatedDate" class="col-form-label col-md-2"></label>
                                    <div class="col-md-3">
                                        <input asp-for="CreatedDate" class="form-control m-inputs" disabled="disabled" />
                                    </div>
                                    <label asp-for="LastModifiedDate" class="col-form-label col-md-2"></label>
                                    <div class="col-md-3">
                                        <input asp-for="LastModifiedDate" class="form-control m-inputs" disabled="disabled" />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="tab-pane" id="m_tabs_1_2" role="tabpanel">
                            <div class="m-form m-form--fit m-form--label-align-right m-form--group-seperator-dashed">
                                <div class="form-group m-form__group row">
                                    <label class="col-form-label col-lg-3 col-sm-12">
                                        @IsisTravelCore.Resources.Country.UploadImages
                                    </label>
                                    <div class="col-lg-4 col-md-9 col-sm-12">
                                        <form asp-action="UploadCountryImages" asp-controller="Countries" asp-route-id="@Model.Id" class="m-dropzone dropzone m-dropzone--success" id="m-dropzone-three" enctype="multipart/form-data">
                                            <div class="form-group form-actions">
                                                <div class="col-md-9 col-md-offset-4">
                                                    <button type="submit" class="btn btn-sm btn-primary"><i class="fa fa-floppy-o"></i> Upload</button>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                                <div class="form-group m-form__group row">
                                    <table class="table table-striped- table-bordered table-hover table-checkable responsive" id="CountryImages">
                                        <thead>
                                            <tr>
                                                <th style="text-align:center">@IsisTravelCore.Resources.Country.Image</th>
                                                <th style="text-align:center">@IsisTravelCore.Resources.Country.SlideShow</th>
                                                <th style="text-align:center">@IsisTravelCore.Resources.Country.Active</th>
                                                <th style="text-align:center">@IsisTravelCore.Resources.Country.CreatedDate</th>
                                                <th style="text-align:center">@IsisTravelCore.Resources.Country.LastModifiedDate</th>
                                                <th style="text-align:center"></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model.CountryImages.Where(t => t.Active))
                                            {
                                                <tr>
                                                    <td style="text-align:center">
                                                        <img src="@Url.Content("~/uploads/"+Model.Name+"/Images/"+item.Image)" width="80" class="img-circle" />
                                                    </td>
                                                    <td style="text-align:center">
                                                        @Html.DisplayFor(modelItem => item.SlideShow)
                                                    </td>
                                                    <td style="text-align:center">
                                                        @Html.DisplayFor(modelItem => item.Active)
                                                    </td>
                                                    <td style="text-align:center">
                                                        @Html.DisplayFor(modelItem => item.CreatedDate)
                                                    </td>
                                                    <td style="text-align:center">
                                                        @Html.DisplayFor(modelItem => item.LastModifiedDate)
                                                    </td>
                                                    <td style="text-align:center">
                                                        @if (item.Active)
                                                        {
                                                            Activation = IsisTravelCore.Resources.Genral.InActive;
                                                        }
                                                        else
                                                        {
                                                            Activation = IsisTravelCore.Resources.Genral.Active;
                                                        }
                                                        <a asp-action="ImageActivation" asp-route-id="@item.Id">@Activation</a>
                                                        @if (item.SlideShow)
                                                        {
                                                            SlideShow = IsisTravelCore.Resources.Country.SlideShow;
                                                        }
                                                        else
                                                        {
                                                            SlideShow = IsisTravelCore.Resources.Country.NotSlideShow;
                                                        }
                                                        <a asp-action="ImageSlideShow" asp-route-id="@item.Id">@Activation</a>

                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                        <div class="tab-pane" id="m_tabs_1_3" role="tabpanel">
                            <div class="m-form m-form--fit m-form--label-align-right m-form--group-seperator-dashed">
                                <div class="form-group m-form__group row">
                                    <table class="table table-striped- table-bordered table-hover table-checkable responsive" id="Tours">
                                        <thead>
                                            <tr>
                                                <th style="text-align:center">@IsisTravelCore.Resources.Tour.Image</th>
                                                <th style="text-align:center">@IsisTravelCore.Resources.Tour.TourName</th>
                                                <th style="text-align:center">@IsisTravelCore.Resources.Tour.Intro</th>
                                                <th style="text-align:center">@IsisTravelCore.Resources.Tour.Description</th>
                                                <th style="text-align:center">@IsisTravelCore.Resources.Tour.OldPrice</th>
                                                <th style="text-align:center">@IsisTravelCore.Resources.Tour.Price</th>
                                                <th style="text-align:center">@IsisTravelCore.Resources.Tour.HomePage</th>
                                                <th style="text-align:center">@IsisTravelCore.Resources.Tour.StartDate</th>
                                                <th style="text-align:center">@IsisTravelCore.Resources.Tour.EndDate</th>

                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model.Tours.Where(t => t.Active))
                                            {
                                                <tr>
                                                    <td style="text-align:center">
                                                        <img src="@Url.Content("~/uplaods/"+Model.Name+"/"+item.TourName+"/"+item.TourMainImage)" width="80" class="img-circle" />
                                                    </td>
                                                    <td style="text-align:center">
                                                        @Html.DisplayFor(modelItem => item.TourName)
                                                    </td>
                                                    <td style="text-align:center">
                                                        @Html.DisplayFor(modelItem => item.Intro)
                                                    </td>
                                                    <td style="text-align:center">
                                                        @Html.DisplayFor(modelItem => item.Description)
                                                    </td>
                                                    <td style="text-align:center">
                                                        @Html.DisplayFor(modelItem => item.OldPrice)
                                                    </td>
                                                    <td style="text-align:center">
                                                        @Html.DisplayFor(modelItem => item.Price)
                                                    </td>
                                                    <td style="text-align:center">
                                                        @Html.DisplayFor(modelItem => item.HomePage)
                                                    </td>
                                                    <td style="text-align:center">
                                                        @Html.DisplayFor(modelItem => item.StartDate)
                                                    </td>
                                                    <td style="text-align:center">
                                                        @Html.DisplayFor(modelItem => item.EndDate)
                                                    </td>

                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                        <div class="tab-pane" id="m_tabs_1_4" role="tabpanel">
                            <div class="m-form m-form--fit m-form--label-align-right m-form--group-seperator-dashed">
                                <div class="form-group m-form__group row">
                                    <table class="table table-striped- table-bordered table-hover table-checkable responsive" id="Hotels">
                                        <thead>
                                            <tr>
                                                <th style="text-align:center">@IsisTravelCore.Resources.Hotel.Image</th>
                                                <th style="text-align:center">@IsisTravelCore.Resources.Hotel.Name</th>
                                                <th style="text-align:center">@IsisTravelCore.Resources.Hotel.Address</th>
                                                <th style="text-align:center">@IsisTravelCore.Resources.Hotel.Category</th>
                                                <th style="text-align:center">@IsisTravelCore.Resources.Hotel.Phone</th>
                                                <th style="text-align:center">@IsisTravelCore.Resources.Country.Active</th>
                                                <th style="text-align:center">@IsisTravelCore.Resources.Country.CreatedDate</th>
                                                <th style="text-align:center">@IsisTravelCore.Resources.Country.LastModifiedDate</th>
                                                @*<th style="text-align:center"></th>*@
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model.Hotels.Where(t => t.Active))
                                            {
                                                <tr>
                                                    <td style="text-align:center">
                                                        <img src="@Url.Content("~/uplaods/"+Model.Name+"/Hotels/"+item.Name+"/"+item.HotelMainImage)" width="80" class="img-circle" />
                                                    </td>
                                                    <td style="text-align:center">
                                                        @Html.DisplayFor(modelItem => item.Name)
                                                    </td>
                                                    <td style="text-align:center">
                                                        @Html.DisplayFor(modelItem => item.Address)
                                                    </td>
                                                    <td style="text-align:center">
                                                        @Html.DisplayFor(modelItem => item.Phone)
                                                    </td>
                                                    <td style="text-align:center">
                                                        @Html.DisplayFor(modelItem => item.Category.Name)
                                                    </td>
                                                    <td style="text-align:center">
                                                        @Html.DisplayFor(modelItem => item.Active)
                                                    </td>
                                                    <td style="text-align:center">
                                                        @Html.DisplayFor(modelItem => item.CreatedDate)
                                                    </td>
                                                    <td style="text-align:center">
                                                        @Html.DisplayFor(modelItem => item.LastModifiedDate)
                                                    </td>
                                                    @*<td style="text-align:center">
                                                            @Html.ActionLink(IsisTravelCore.Resources.Genral.Edit, "Edit", "Hotels", new { id = item.Id }) |
                                                            @Html.ActionLink(IsisTravelCore.Resources.Genral.Details, "Details", "Hotels", new { id = item.Id }) |
                                                            @if (item.Active)
                                                                {
                                                                    Activation = IsisTravelCore.Resources.Genral.InActive;
                                                                }
                                                                else
                                                                {
                                                                    Activation = IsisTravelCore.Resources.Genral.Active;
                                                                }
                                                            @Html.ActionLink(Activation, "Activation", "Hotels", new { id = item.Id })
                                                        </td>*@
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="m-portlet__foot m-portlet__no-border m-portlet__foot--fit">
                    <div class="m-form__actions m-form__actions--solid">
                        <div class="row">
                            <div class="col-lg-6">
                                <a asp-action="Edit" class="btn btn-primary" asp-route-id="@Model.Id">@IsisTravelCore.Resources.Genral.Edit</a>
                                <a asp-action="Index" class="btn btn-secondary" asp-route-id="@Model.Id">@IsisTravelCore.Resources.Genral.Cancel</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!--end::Form-->
        </div>
    </div>
</div>
@section Scripts{
    <script>
        $(document).ready(function () {
            var t = $("#CountryImages").DataTable(
                {
                    "language": {
                        "url": "//cdn.datatables.net/plug-ins/1.10.19/i18n/Spanish.json"
                    },
                    scrollX: !0,

                });
            var t2 = $("#Tours").DataTable(
                {
                    "language": {
                        "url": "//cdn.datatables.net/plug-ins/1.10.19/i18n/Spanish.json"
                    },
                    scrollX: !0,

                });
            var t3 = $("#Hotels").DataTable({
                "language": { "url": "//cdn.datatables.net/plug-ins/1.10.19/i18n/Spanish.json" },
                scrollX: !0,
            });
        });
    </script>
    <script>
        $(function () {
            Dropzone.options.dropzoneForm = {
                paramName: "inputFiles", // The name that will be used to transfer the file
                autoProcessQueue: true,
                uploadMultiple: false,
                parallelUploads: 100,
                accept: function (file, done) {
                    done();
                }
            };
        });
    </script>
}