@model IEnumerable<IsisTravelCore.Models.Domains.RequestOffer>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="m-portlet m-portlet--mobile">
    <div class="m-portlet__head">
        <div class="m-portlet__head-caption">
            <div class="m-portlet__head-title">
                <h3 class="m-portlet__head-text">
                    @ViewBag.Title
                </h3>
            </div>
        </div>
        <div class="m-portlet__head-tools">
            <ul class="m-portlet__nav">
                <li class="m-portlet__nav-item">
                    <a asp-action="Create" class="btn btn-danger m-btn m-btn--custom m-btn--icon m-btn--air">
                        <span>
                            <span>
                                @IsisTravelCore.Resources.Hotel.CreateHotel
                            </span>
                        </span>
                    </a>
                </li>
                <li class="m-portlet__nav-item"></li>
                <li class="m-portlet__nav-item m-dropdown m-dropdown--inline m-dropdown--arrow m-dropdown--align-right m-dropdown--align-push" m-dropdown-toggle="hover" aria-expanded="true">
                    <a href="#" class="m-portlet__nav-link m-dropdown__toggle dropdown-toggle btn btn--sm m-btn--pill btn-secondary m-btn m-btn--label-brand">
                        @IsisTravelCore.Resources.Genral.Export
                    </a>
                    <div class="m-dropdown__wrapper" style="z-index: 101;">
                        <span class="m-dropdown__arrow m-dropdown__arrow--right m-dropdown__arrow--adjust" style="left: auto; right: 36px;"></span>
                        <div class="m-dropdown__inner">
                            <div class="m-dropdown__body">
                                <div class="m-dropdown__content">
                                    <ul class="m-nav">
                                        <li class="m-nav__section m-nav__section--first">
                                            <span class="m-nav__section-text">
                                                @IsisTravelCore.Resources.Genral.ExportTools
                                            </span>
                                        </li>
                                        <li class="m-nav__item">
                                            <a href="#" class="m-nav__link" id="export_print">
                                                <i class="m-nav__link-icon la la-print"></i>
                                                <span class="m-nav__link-text">
                                                    @IsisTravelCore.Resources.Genral.Print
                                                </span>
                                            </a>
                                        </li>
                                        <li class="m-nav__item">
                                            <a href="#" class="m-nav__link" id="export_copy">
                                                <i class="m-nav__link-icon la la-copy"></i>
                                                <span class="m-nav__link-text">
                                                    @IsisTravelCore.Resources.Genral.Copy
                                                </span>
                                            </a>
                                        </li>
                                        <li class="m-nav__item">
                                            <a href="#" class="m-nav__link" id="export_excel">
                                                <i class="m-nav__link-icon la la-file-excel-o"></i>
                                                <span class="m-nav__link-text">
                                                    @IsisTravelCore.Resources.Genral.Excel
                                                </span>
                                            </a>
                                        </li>

                                        <li class="m-nav__item">
                                            <a href="#" class="m-nav__link" id="export_pdf">
                                                <i class="m-nav__link-icon la la-file-pdf-o"></i>
                                                <span class="m-nav__link-text">
                                                    @IsisTravelCore.Resources.Genral.PDF
                                                </span>
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </li>
            </ul>
        </div>
    </div>
    <div class="m-portlet__body">
        <!--begin: Datatable -->
        <table class="table table-striped- table-bordered table-hover table-checkable " id="Requests">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Tour)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Category)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Creator)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Creator.Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Creator.Phone)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Date)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.City)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.AdultQuantity)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.BabyQuantity)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ExtraRoomQuantity)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TotalAdult)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TotalBaby)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TotalExtraRoom)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Total)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.CreatedDate)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Tour.TourName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Category.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Creator.FirstName) @Html.DisplayFor(modelItem => item.Creator.LastName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Creator.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Creator.Phone)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Date)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.City)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AdultQuantity)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.BabyQuantity)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ExtraRoomQuantity)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TotalAdult)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TotalBaby)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TotalExtraRoom)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Total)
                        </td>


                        <td>
                            @Html.DisplayFor(modelItem => item.CreatedDate)
                        </td>
                        <td>
                            <a data-toggle="modal" href="#EmailSender" data-request="@item.Id" data-mail="@item.Creator.Email">@IsisTravelCore.Resources.RequestOffer.SendMail</a>
                            @*<a asp-action="Details" asp-route-id="@item.Id">@IsisTravelCore.Resources.Genral.Details</a>*@
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<partial name="_EmailSender" />
@section Scripts{
    <script>
        $(document).ready(function () {
            var t = $("#Requests").DataTable(
                {
                    "language": {
                        "url": "//cdn.datatables.net/plug-ins/1.10.19/i18n/Spanish.json"
                    },
                    scrollX: !0,
                    buttons: ["print", "copyHtml5", "excelHtml5", "pdfHtml5"],
                });
            $("#export_print").on("click", function (e) { e.preventDefault(), t.button(0).trigger() }),
                $("#export_copy").on("click", function (e) {
                    e.preventDefault(), t.button(1).trigger()
                }), $("#export_excel").on("click", function (e) { e.preventDefault(), t.button(2).trigger() }),
                $("#export_pdf").on("click", function (e) { e.preventDefault(), t.button(4).trigger() });

        });
        $("#EmailSender").on('show.bs.modal', function (e) {
            var Email = $(e.relatedTarget).attr('data-mail');
            var request = $(e.relatedTarget).attr('data-request');
            $("#Email").val(Email);
            $("#Request").val(request);
        });
        $('#SendMail-Form').submit(function (e) {
            e.preventDefault();
            if ($('#SendMail-Form').valid()) {
                $.ajax({
                    type: 'Get',
                    url: "/RequestOffers/SendMail/?email=" + $("#Email").val() + "&&message=" + $("#Message").val() + "&&subject=" + $("#Subject").val() + "&&RequestId=" + $("#Request").val(),
                    success: function (result) {
                        $("#EmailSender").modal('hide');
                    },
                    error: function () {
                        swal({
                            title: "Precio del dia !",
                            text: "Algo mal por favor intente de nuevo",
                            type: "error",
                        });
                    }
                });
            }
            else {
                e.preventDefault();
            }
        });
    </script>

}

