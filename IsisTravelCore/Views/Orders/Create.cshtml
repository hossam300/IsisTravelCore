@model IsisTravelCore.Models.Domains.Order

@{
    ViewData["Title"] = "crear factura";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <!--begin::Portlet-->
        <div class="m-portlet">
            <div class="m-portlet__head">
                <div class="m-portlet__head-caption">
                    <div class="m-portlet__head-title">
                        <span class="m-portlet__head-icon m--hide">
                            <i class="la la-gear"></i>
                        </span>
                        <h3 class="m-portlet__head-text">
                            @ViewBag.Title
                        </h3>
                    </div>
                </div>
            </div>
            <form asp-action="Create" class="m-form m-form--fit m-form--label-align-right m-form--group-seperator-dashed">
                <div class="m-portlet__body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group m-form__group row">
                        <label asp-for="OrderDate" class="col-form-label col-md-2"></label>
                        <input asp-for="OrderDate" type="text" class="form-control datepicker" />
                        <span asp-validation-for="OrderDate" class="text-danger"></span>
                    </div>
                    <div class="form-group m-form__group row">
                        <label asp-for="Name" class="col-form-label col-md-2"></label>
                        <div class="col-md-3">
                            <input asp-for="Name" class="form-control m-input" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <label asp-for="City" class="col-form-label col-md-2"></label>
                        <div class="col-md-3">
                            <select asp-for="City" class="form-control m-input">
                                <option value="Barcelona">Barcelona</option>
                                <option value="Madrid">Madrid</option>
                            </select>
                            <span asp-validation-for="City" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group m-form__group row">
                        <label asp-for="Address" class="col-form-label col-md-2"></label>
                        <div class="col-md-3">
                            <textarea asp-for="Address" class="form-control"></textarea>
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                        <label asp-for="Population" class="col-form-label col-md-2"></label>
                        <div class="col-md-3">
                            <input asp-for="Population" class="form-control m-input" />
                            <span asp-validation-for="Population" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group m-form__group row">
                        <label asp-for="CP" class="col-form-label col-md-2"></label>
                        <div class="col-md-3">
                            <input asp-for="CP" class="form-control" />
                            <span asp-validation-for="CP" class="text-danger"></span>
                        </div>
                        <label asp-for="Country" class="col-form-label col-md-2"></label>
                        <div class="col-md-3">
                            <select asp-for="Country" class="form-control m-input"></select>
                            <span asp-validation-for="Country" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group m-form__group row">
                        <label asp-for="NIE" class="col-form-label col-md-2"></label>
                        <div class="col-md-3">
                            <input asp-for="NIE" class="form-control m-input" />
                            <span asp-validation-for="NIE" class="text-danger"></span>
                        </div>
                        <label asp-for="Phone" class="col-form-label col-md-2"></label>
                        <div class="col-md-3">
                            <input asp-for="Phone" class="form-control m-input" />
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>

                    </div>

                    <div class="form-group m-form__group row">
                        <table class="table" width="100%">
                            <thead>
                                <tr>
                                    <th>CONCEPTO</th>
                                    <th>UNID</th>
                                    <th>IMPORTE</th>
                                    <th>DTO</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>
                                        <input asp-for="ItemName1" class="form-control" />
                                    </td>
                                    <td>
                                        <input asp-for="Quantity1" class="form-control" />
                                    </td>
                                    <td>
                                        <input asp-for="Price1" class="form-control" />
                                    </td>
                                    <td>
                                        <input asp-for="Discount1" class="form-control" />
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <input asp-for="ItemName2" class="form-control" />
                                    </td>
                                    <td>
                                        <input asp-for="Quantity2" class="form-control" />
                                    </td>
                                    <td>
                                        <input asp-for="Price2" class="form-control" />
                                    </td>
                                    <td>
                                        <input asp-for="Discount2" class="form-control" />
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <input asp-for="ItemName3" class="form-control" />
                                    </td>
                                    <td>
                                        <input asp-for="Quantity3" class="form-control" />
                                    </td>
                                    <td>
                                        <input asp-for="Price3" class="form-control" />
                                    </td>
                                    <td>
                                        <input asp-for="Discount3" class="form-control" />
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <input asp-for="ItemName4" class="form-control" />
                                    </td>
                                    <td>
                                        <input asp-for="Quantity4" class="form-control" />
                                    </td>
                                    <td>
                                        <input asp-for="Price4" class="form-control" />
                                    </td>
                                    <td>
                                        <input asp-for="Discount4" class="form-control" />
                                    </td>
                                </tr>
                            </tbody>
                        </table>

                    </div>
                </div>
                <div class="m-portlet__foot m-portlet__no-border m-portlet__foot--fit">
                    <div class="m-form__actions m-form__actions--solid">
                        <div class="row">
                            <div class="col-lg-6">
                                <input type="submit" value="@IsisTravelCore.Resources.Genral.Save" class="btn btn-primary" />
                                <a asp-action="Index" class="btn btn-secondary">
                                    @IsisTravelCore.Resources.Genral.Cancel
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

